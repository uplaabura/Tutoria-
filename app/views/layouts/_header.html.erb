<div class="navbar navbar-fixed-top">
  <div class="navbar-inner"> 
    <div class="container-fluid">

      <%= link_to "Tutoria!", root_path, :class => "brand" %>
      
      <!-- collapse navbar for responsive design -->
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>

      <!-- user button -->
      <% if signed_in? %>
        <div class="btn-group pull-right">                           
          <button class="btn dropdown-toggle" data-toggle="dropdown" href="#">
              <i class="icon-user"></i> <%= current_user.name %>
              <span class="caret"></span>
          </button>

          <ul class="dropdown-menu">
            <li><%= link_to "Profile", user_path(current_user) %></li>
            <li><%= link_to "Settings", "#" %></li>
            <li class="divider"></li>
            <li><%= link_to "Sign out", signout_path, :method => "delete" %></li>
          </ul>
        </div>
        <!-- END .btn-group .pull-right-->
      <% else %>
        <%= link_to "Start!", start_path, :class => "btn pull-right" %>
      <% end %>
 
      <div class="nav-collapse">
        <ul class="nav">
          <li><%= link_to "Home", "#" %></li>
          <li><%= link_to "Tutoria!", "#" %></li>
        </ul>
      </div>
      <!-- END .nav-collapse -->
    </div>
    <!-- END .container-fluid -->
  </div>
  <!-- END .navbar-inner -->
</div>
